{
    "name": "html-dom",
    "description": "Common tasks to manage HTML DOM with native API",
    "author": {
        "name": "Nguyen Huu Phuoc",
        "email": "me@phuoc.ng",
        "url": "https://twitter.com/nghuuphuoc"
    },
    "homepage": "https://htmldom.dev",
    "keywords": [
        "dom",
        "document object model",
        "dom api",
        "html"
    ],
    "scripts": {
        "build": "npm run build:css && npm run build:html",
        "build:css": "postcss css/tailwind.css -o css/styles.css",
        "build:html": "eleventy",
        "watch": "eleventy --watch",
        "serve": "eleventy --serve",
        "deploy": "npm run build && netlify deploy --dir=_site --prod"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/phuoc-ng/html-dom"
    },
    "bugs": {
        "url": "https://github.com/phuoc-ng/html-dom/issues"
    },
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.10.0",
        "autoprefixer": "^9.7.4",
        "postcss-cli": "^7.1.0",
        "tailwindcss": "^1.2.0"
    }
}
